<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MensMorris.Game.View"
                    xmlns:vm="clr-namespace:MensMorris.Game.ViewModel">
    <DataTemplate DataType="{x:Type vm:StartVM}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label>Player selection</Label>
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding PlayerOptions}" SelectedValue="{Binding FirstPlayer}"
                          SelectedIndex="0">
                </ComboBox>
                <ComboBox ItemsSource="{Binding PlayerOptions}" SelectedValue="{Binding SecondPlayer}"
                          SelectedIndex="0">
                </ComboBox>
            </StackPanel>
            <Label>Rules</Label>
            <Button Command="{Binding StartMatch}">Start Match</Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>